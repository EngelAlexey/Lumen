# ==============================================
# LUMEN - Environment Configuration Template
# ==============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ----------------------------------------------
# Supabase Configuration (REQUIRED)
# ----------------------------------------------
# Get these from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-public-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# ----------------------------------------------
# Stripe Configuration (REQUIRED for payments)
# ----------------------------------------------
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs for each plan
STRIPE_PRICE_SOLO=price_your_solo_plan_id
STRIPE_PRICE_STARTUP=price_your_startup_plan_id

# ----------------------------------------------
# Onvo Configuration (Optional - Alternative payment provider)
# ----------------------------------------------
ONVO_API_KEY=your_onvo_api_key
ONVO_WEBHOOK_SECRET=your_onvo_webhook_secret
ONVO_REAL_WEBHOOK_SECRET=your_onvo_real_webhook_secret
NUXT_ONVO_PRICE_STARTUP=your_onvo_price_id

# ----------------------------------------------
# Application Settings
# ----------------------------------------------
# Site URL for redirects and webhooks
SITE_URL=http://localhost:3000

# Node Environment
NODE_ENV=development
